<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="64dp"
    android:layout_height="64dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:padding="3dp"
        android:id="@+id/slot_frame_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/text_content_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="text"
        android:textColor="@color/transparent_50p_white"
        android:visibility="invisible"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="3"
        app:layout_constraintTop_toTopOf="@+id/slot_frame_iv"
        app:layout_constraintBottom_toBottomOf="@+id/slot_frame_iv"
        app:layout_constraintLeft_toLeftOf="@+id/slot_frame_iv"
        app:layout_constraintRight_toRightOf="@+id/slot_frame_iv"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_fragment"
        android:alpha="0.3"
        />
    <ImageView
        android:id="@+id/lockView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="5dp"
        android:background="@drawable/unlock"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/slot_frame_iv"
        app:layout_constraintRight_toRightOf="@+id/slot_frame_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>