<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="68dp"
    android:layout_height="68dp"
    android:gravity="center">

    <com.ola.chat.picker.customview.RoundCornerImageView
        android:id="@+id/thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:cutradius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/durationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/bg_video_duration_time"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/thumb"
        app:layout_constraintRight_toRightOf="@id/thumb"
        tools:ignore="SmallSp"
        tools:text="00:14" />

    <TextView
        android:id="@+id/selectedView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_text_edit_item"
        android:gravity="center"
        android:lines="2"
        android:padding="12dp"
        android:text="@string/cutsame_edit_click_to_edit_hint"
        android:textColor="@color/text_white"
        android:textSize="15sp"
        android:visibility="gone"
        tools:visibility="gone" />


</androidx.constraintlayout.widget.ConstraintLayout>