<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cut.preview.CutPlayerActivity">

    <View
        android:id="@+id/text_box_view"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/bottom_edit_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_gravity="bottom"
        android:padding="10dp"
        android:visibility="gone"
        >
        <EditText
            android:id="@+id/bottom_edit_text"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/finish_edit_text"
            android:layout_toStartOf="@+id/finish_edit_text"
            android:imeOptions="normal"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:paddingLeft="10dp"
            android:background="@drawable/bg_edit_text"
            android:maxLines="3"/>
        <TextView
            android:id="@+id/finish_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/cutsame_common_finish"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </RelativeLayout>

</FrameLayout>