<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="#000"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="14dp"
    android:paddingEnd="14dp">


    <TextView
        android:id="@+id/tab_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:layout_marginStart="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:includeFontPadding="false"
        tools:text="相册导入"
        />

    <View
        android:id="@+id/indicator"
        android:layout_width="28dp"
        android:layout_height="2dp"
        app:layout_constraintStart_toStartOf="@+id/tab_item_tv"
        app:layout_constraintEnd_toEndOf="@+id/tab_item_tv"
        app:layout_constraintTop_toBottomOf="@+id/tab_item_tv"
        android:layout_marginTop="3dp"
        android:background="@drawable/bg_indicator_item"
        android:visibility="invisible"
        tools:visibility="visible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
