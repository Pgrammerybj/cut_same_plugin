<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".cut.preview.CutPreviewPlayerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--顶部导航-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/closeView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/exportView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:background="@drawable/bg_ok_btn"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/cutsame_export_title"
                android:textColor="@color/text_white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/videoPlayContainer"
            layout="@layout/fragment_cut_video_play"
            android:layout_width="260dp"
            android:layout_height="462dp"
            android:layout_below="@+id/titleBar"
            android:layout_centerHorizontal="true" />

        <FrameLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <!-- 底部视频list -->
            <include
                android:id="@+id/videoThumbListContainer"
                layout="@layout/fragment_cut_video_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" />
            <!-- 文字编辑功能 -->
            <com.cutsame.ui.cut.textedit.view.PlayerTextEditView
                android:id="@+id/player_edit_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_panel"
                android:visibility="gone" />
        </FrameLayout>

    </RelativeLayout>

    <!-- 文字编辑功能(文本框输入)-->
    <com.cutsame.ui.cut.textedit.view.PlayerTextEditExtraView
        android:id="@+id/play_edit_extra_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>