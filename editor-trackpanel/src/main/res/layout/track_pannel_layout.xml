<?xml version="1.0" encoding="utf-8"?>
<com.ss.ugc.android.editor.track.widget.HorizontalScrollContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scroller_bg"
    android:orientation="vertical"
    android:splitMotionEvents="false"
    app:layout_constraintBottom_toBottomOf="parent">

    <com.ss.ugc.android.editor.track.widget.TimeRulerScroller

        android:id="@+id/timeRulerScroller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.ss.ugc.android.editor.track.widget.TrackFlexibleRuler
            android:id="@+id/timeRuler"
            android:layout_width="match_parent"
            android:layout_height="20dp" />


    </com.ss.ugc.android.editor.track.widget.TimeRulerScroller>


    <com.ss.ugc.android.editor.track.widget.FrameScroller
        android:id="@+id/frameScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:splitMotionEvents="false"
        app:layout_constraintTop_toBottomOf="@+id/timeRulerScroller">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:splitMotionEvents="false">

            <com.ss.ugc.android.editor.track.widget.MultiTrackLayout
                android:id="@+id/multiTrack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/maintrack_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:clipToPadding="false"
                android:splitMotionEvents="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/tvMute"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_volume_ori"
                    android:textSize="8sp"
                    android:text="mute"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <FrameLayout
                    android:id="@+id/cover_group"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="25dp">

                    <ImageView
                        android:id="@+id/cover_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent_50p" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:text="@string/ck_set_cover"
                        android:textColor="@color/white"
                        android:textSize="8dp"
                        android:gravity="center" />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
    </com.ss.ugc.android.editor.track.widget.FrameScroller>

    <com.ss.ugc.android.editor.track.fuctiontrack.TrackGroup
        android:layout_marginTop="7dp"
        android:id="@+id/subTrackGroup"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameScroller" />

    <TextView
        android:id="@+id/cover_text"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@id/frameScroller"
        android:text="@string/ck_seek_choose_cover"
        android:gravity="center"
        android:textColor="@color/white_50"
        android:textSize="14dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/cover_seek_signal"
        android:layout_width="6dp"
        android:layout_height="59dp"
        android:background="@drawable/play_head"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/iv_time"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="@drawable/play_head"
        android:scaleType="centerCrop" />


    <ImageView
        android:layout_marginEnd="15dp"
        android:id="@+id/ivAdd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_add_clip"
        app:layout_constraintBottom_toBottomOf="@id/frameScroller"
        app:layout_constraintEnd_toEndOf="@id/frameScroller"
        app:layout_constraintTop_toTopOf="@id/frameScroller" />

</com.ss.ugc.android.editor.track.widget.HorizontalScrollContainer>
