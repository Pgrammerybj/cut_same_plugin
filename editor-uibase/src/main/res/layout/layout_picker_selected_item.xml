<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="68dp"
    android:layout_height="68dp"
    android:background="@null">

    <TextView
        android:id="@+id/tv_reserved_space_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_picker_selected"
        android:gravity="center"
        android:clickable="true"
        android:text="@string/ck_picker_anchor_time"
        android:textColor="#1a313131"
        android:textSize="13sp"/>

    <ImageView
        android:id="@+id/iv_selected_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/default_album_art"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_delete_selected"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:src="@mipmap/delete_selected_image"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>