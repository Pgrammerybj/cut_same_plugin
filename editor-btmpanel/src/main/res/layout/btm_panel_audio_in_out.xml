<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="30dp"
            android:textColor="@color/white"
            android:text="@string/ck_audio_fade_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.ss.ugc.android.editor.base.view.ProgressBar
            android:id="@+id/pb_audio_in"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="30dp"
            android:paddingTop="25dp"
            android:paddingEnd="30dp"
            app:activeLineColor="@color/tv_bottom_color"
            app:circleRadius="5dp"
            app:inactiveLineColor="#535353"
            app:textHeight="20dp"
            app:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="30dp"
            android:text="@string/ck_audio_fade_out"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.ss.ugc.android.editor.base.view.ProgressBar
            android:id="@+id/pb_audio_out"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingStart="30dp"
            android:paddingTop="25dp"
            android:paddingEnd="30dp"
            app:activeLineColor="@color/tv_bottom_color"
            app:circleRadius="5dp"
            app:inactiveLineColor="#535353"
            app:textHeight="20dp"
            app:textSize="10sp" />
    </LinearLayout>


</LinearLayout>
