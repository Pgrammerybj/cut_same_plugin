<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="460dp"
    app:cardBackgroundColor="@null"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp">

    <ImageView
        android:id="@+id/iv_video_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <FrameLayout
        android:id="@+id/fl_surfaceView_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_video_player_state"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_gravity="end"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_video_play_icon"
        android:scaleType="centerInside"
        android:src="@mipmap/icon_video_play" />

    <RelativeLayout
        android:id="@+id/rl_audio_clip"
        android:layout_width="49dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="61dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/bg_shape_video_edit">

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_audio_clip" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_edit_video"
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="61dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/bg_shape_video_edit"
        android:gravity="center"
        android:text="编辑视频"
        android:textColor="@android:color/white"
        android:textSize="14sp" />
</androidx.cardview.widget.CardView>
